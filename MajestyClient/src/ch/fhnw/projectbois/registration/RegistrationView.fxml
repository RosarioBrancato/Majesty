<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../../../../../resources/stylesheets/Login_Registration_Profile.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox>
         <children>
            <Label text="%lbl_Registration_Helper" />
            <HBox>
               <children>
                  <Label fx:id="lbl_Registration_username" text="%lbl_Login_username" />
                  <TextField fx:id="txt_Registration_username" />
                  <Hyperlink fx:id="hyp_Registration_Helper_username" onAction="#RegistrationShowHelperText_username" styleClass="helper" text="?">
                     <tooltip>
                        <Tooltip text="%lbl_Registration_Helper_username" />
                     </tooltip>
                  </Hyperlink>
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0">
               <children>
                  <Label fx:id="lbl_Registration_email" text="%lbl_Registration_email" />
                  <TextField fx:id="txt_Registration_email" />
                  <Hyperlink fx:id="hyp_Registration_Helper_email" onAction="#RegistrationShowHelperText_email" styleClass="helper" text="?">
                     <tooltip>
                        <Tooltip text="%lbl_Registration_Helper_email" />
                     </tooltip>
                  </Hyperlink>
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0">
               <children>
                  <Label fx:id="lbl_Registration_pwd" text="%lbl_Login_password" />
                  <PasswordField fx:id="txt_Registration_pwd" />
                  <Hyperlink fx:id="hyp_Registration_Helper_password" onAction="#RegistrationShowHelperText_password" styleClass="helper" text="?">
                     <tooltip>
                        <Tooltip text="%lbl_Registration_Helper_password" />
                     </tooltip>
                  </Hyperlink>
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="35.0">
               <children>
                  <Label fx:id="lbl_Registration_pwdRepeat" text="%lbl_Registration_repeatPassword" />
                  <PasswordField fx:id="txt_Registration_pwdRepeat" />
                  <Hyperlink fx:id="hyp_Registration_Helper_passwordRepeat" onAction="#RegistrationShowHelperText_passwordRepeat" styleClass="helper" text="?">
                     <tooltip>
                        <Tooltip text="%lbl_Registration_Helper_passwordRepeat" />
                     </tooltip>
                  </Hyperlink>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label fx:id="lbl_Registration_msg" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Button fx:id="btn_Registration_cancel" cancelButton="true" mnemonicParsing="false" onAction="#btn_Registration_cancelClicked" text="%btn_Registration_cancel" />
                  <Button fx:id="btn_Registration_register" defaultButton="true" disable="false" mnemonicParsing="false" onAction="#btn_Registration_registerClicked" text="%btn_Registration_register" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
